{
  "/api/v4/instances/": {
    "get": {
      "summary": "Get a list of book instances",
      "operationId": "getBookInstances",
      "tags": [
        "BookInstance"
      ],
      "responses": {
        "200": {
          "description": "A list of book instances",
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/BookInstance"
                }
              }
            }
          }
        }
      }
    },
    "post": {
      "summary": "Create a new book instance",
      "operationId": "createBookInstance",
      "tags": [
        "BookInstance"
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/BookInstanceCreate"
            }
          }
        },
        "required": true
      },
      "responses": {
        "201": {
          "description": "Book instance created",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookInstance"
              }
            }
          }
        }
      }
    }
  },
  "/api/v4/instances/{id}/": {
    "get": {
      "summary": "Get a book instance by ID",
      "operationId": "getBookInstanceById",
      "tags": [
        "BookInstance"
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "responses": {
        "200": {
          "description": "A single book instance",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookInstance"
              }
            }
          }
        },
        "404": {
          "description": "Book instance not found"
        }
      }
    },
    "put": {
      "summary": "Update a book instance by ID",
      "operationId": "updateBookInstanceById",
      "tags": [
        "BookInstance"
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "requestBody": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/BookInstanceCreate"
            }
          }
        },
        "required": true
      },
      "responses": {
        "200": {
          "description": "Book instance updated",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BookInstance"
              }
            }
          }
        },
        "404": {
          "description": "Book instance not found"
        }
      }
    },
    "delete": {
      "summary": "Delete a book instance by ID",
      "operationId": "deleteBookInstanceById",
      "tags": [
        "BookInstance"
      ],
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "integer"
          }
        }
      ],
      "responses": {
        "204": {
          "description": "Book instance deleted"
        },
        "404": {
          "description": "Book instance not found"
        }
      }
    }
  }
}